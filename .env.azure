# Azure Function App Environment Variables
# These need to be configured in Azure Portal under Configuration > Application Settings

# LLM Configuration
LLM_PROVIDER=groq
LLM_MODEL_NAME=llama-3.3-70b-versatile

# API Keys (Replace with your actual keys in Azure Portal)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
MEITY_API_KEY_VALUE=your_bhashini_api_key_here

# Geography / Maps Services
MAPBOX_API_TOKEN=your_mapbox_token_here

# Marqo Database (Update with Azure-hosted Marqo if available)
MARQO_ENDPOINT_URL=http://localhost:8882
MARQO_INDEX_NAME=oan_index

# Beckn / ONDC Configuration
BAP_ID=oan-mock
BAP_URI=https://oan-ai-function.azurewebsites.net
BAP_ENDPOINT=https://oan-ai-function.azurewebsites.net/api/v1/search

# CORS Configuration
ALLOWED_ORIGINS=https://oan-ui-function.politecoast-f62ee001.uaenorth.azurecontainerapps.io,https://oan-ai-function.azurewebsites.net

# Redis Configuration (if using Azure Redis Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Environment
ENVIRONMENT=production

# Azure-specific settings
WEBSITES_PORT=80
